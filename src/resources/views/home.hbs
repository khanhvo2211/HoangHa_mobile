<div class="mt-4 container">
  <div class="row">
    {{#each course}}

      <div class="col-sm-6 col-md-4">
        <div class="card card-course" style="width: 18rem;">
          <a href="course/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt={{this.image}}
            /></a>

          <div class="card-body">
            <a href="course/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>

            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua Khoá Học</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>